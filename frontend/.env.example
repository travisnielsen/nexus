# Azure AD / MSAL Configuration
# Copy this file to .env.local and fill in your values

# Azure AD App Registration - Client ID (Application ID)
NEXT_PUBLIC_AZURE_AD_CLIENT_ID=your-client-id-here

# Azure AD Tenant ID (Directory ID)
# Use "common" for multi-tenant, or your specific tenant ID
NEXT_PUBLIC_AZURE_AD_TENANT_ID=your-tenant-id-here

# Authentication (enabled by default)
# Set to "false" to bypass Azure AD authentication entirely
# WARNING: Do NOT use AUTH_ENABLED=false in production environments!
NEXT_PUBLIC_AUTH_ENABLED=true

# Agent API URLs
# Base URL for the agent API backend
AGENT_API_BASE_URL=http://localhost:8000

# Individual agent endpoints (relative to base URL or absolute)
# Leave empty to use default paths: / for my_agent, /logistics for logistics_agent
AGENT_MY_AGENT_URL=
AGENT_LOGISTICS_URL=

# Application Insights (optional)
# Use instrumentation key (simple GUID) instead of full connection string
# to avoid shell escaping issues during Docker builds
NEXT_PUBLIC_APPINSIGHTS_INSTRUMENTATION_KEY=
# Ingestion endpoint is optional - SDK uses defaults if not specified
NEXT_PUBLIC_APPINSIGHTS_INGESTION_ENDPOINT=
